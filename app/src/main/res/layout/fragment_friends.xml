<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wisc.meetme.FriendsFragment"
    android:id="@+id/fragment_friends">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:textSize="40dp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="155dp" />

    <ListView
        android:layout_width="wrap_content"
        android:text="There are no friends here"
        android:textSize="18sp"
        android:id="@+id/friendsOffline"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="150dp" />

    <ListView
        android:layout_width="wrap_content"
        android:text="You currently have no friends online :("
        android:textSize="18sp"
        android:id="@+id/friendsActive"
        android:layout_below="@+id/refreshButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_height="150dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/refreshButton"
        android:layout_marginTop="65dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/refreshButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
